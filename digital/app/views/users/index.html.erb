<h1>users:</h1>

<table>
  <thead>
    <tr>
      <th>First Name </th>
      <th>Email </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	    <td><%= link_to 'Orders', {:controller => "dashboards", :action => "user_display_order", :id => user.id } %></td>
       </tr>
    <% end %>
  </tbody>
</table>
