<p id="notice"><%= notice %></p>

<h1>Your orders</h1>

<table>
  <thead>
    <tr>
      <th>Card type</th>
      <th>User</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.orders.each do |order| %>
      <tr>
        <td><%= order.card_type %></td>
        <td><%= order.user.first_name %></td>
        <td><%= order.order_status.status %></td>
        <td><%= link_to 'Show', order %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


