<div id= "list" >
<% if @category.id == 1 %>
<table>
<thead>
    <tr>
      <th>Monitor name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |f| %>
      <tr>
        <td><%=f.name %></td>
        <td><%= f.description %></td>
        <td><%= f.price %></td>
       </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<table>
<thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Contact number</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |f| %>
      <tr>
        <td><%=f.first_name %></td>
        <td><%= f.last_name %></td>
        <td><%= f.contact_number %></td>
       </tr>
    <% end %>
  </tbody>
</table>
<% end %>
</div>
