<h2>sample-app</h2>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sample.each do |sample| %>
      <tr>
        <td><%= sample.title %></td>
        <td><%= sample.desc %></td>
         <td><%= link_to 'Show', sample %></td>
        <td><%= link_to 'Destroy', sample, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p><%= link_to "Add new item",new_sample_path %></p>
